<h4><em><%= @post.title %></em></h4>
<h3><%= @post.summary %></h3>
  <%= cl_image_tag @post.main_image_upload  %>
  <p><%= @post.content %></p>


<% if current_user.admin %>
  <%= link_to "Edit", edit_post_path(@post)%>
  <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure your would like to delete this post?"} %>
<% end %>
  <%= link_to "All Posts", posts_path(@posts)%>


