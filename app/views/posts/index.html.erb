<div class="title text-center">
  <h1> What we've been up to....</h1>
</div>
<!-- For admin to add a new post -->
<div class="text-center my-3">
  <% if current_user.admin %>
    <p><%= link_to "+ Add a post", new_post_path(@post)%></p>
  <% end %>
</div>
<!-- Each post in the index card -->
<div class="container-post mt-5">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-12">
        <article class="blog-card">
          <div class="blog-card__background">
            <div class="card__background--wrapper">
              <div class="card__background--main">
                <%= cl_image_tag post.main_image_upload %>
                <div class="card__background--layer"></div>
              </div>
            </div>
          </div>
          <div class="blog-card__head">
            <span class="date__box"><%= post.created_at.strftime("%b %d, %Y") %></span>
          </div>
          <div class="blog-card__info">
            <h5><%= post.title %></h5>
            <p><%= post.oneliner %></p>
            <%= link_to "READ MORE", post_path(post), class:"btn-post btn--with-icon" %>
          </div>
        </article>
      </div>
    <% end %>
  </div>
</div>
