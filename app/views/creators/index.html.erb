<div class="title text-center">
  <h1>Meet Our Creators</h1>
</div>
<!-- cards to show all creators -->
<div class="index-all">
  <% @creators.each do |c| %>
    <div class="row flex-wrap">
      <div class="col-sm-10 col-md-6 col-lg-4">
        <div class="our-creators">
          <div class="picture">
            <%= cl_image_tag c.avatar %>
          </div>
          <div class="creator-content">
            <h3 class="name"><%= c.first_name %>, <%= c.age %></h3>
            <h4 class="city"><%= c.city %></h4>
          </div>
          <div class="view-full-profile">
            <%= link_to "View Profile", creator_path(c) %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>