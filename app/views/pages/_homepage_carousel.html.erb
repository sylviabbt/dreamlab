<div id="home-carousel" class="carousel slide" data-ride="carousel" data-interval="4000" data-pause="false">
  <!-- set ouside to relative, then new div w/ navbar absolute -->
  <!-- End of banner classes -->
  <ol class="carousel-indicators">
    <% picture_slides = ['leadkid.png', 'childpainting.jpg','homeart5.jpg','homeart4.png'].each_with_index do |pic, i| %>
      <li data-target="#home-carousel" data-slide-to="<%= i %>" class="<%= 'active' if i == 0 %>"></li>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <!-- // ARRAY OF SLIDES .each it -->
    <div class="banner d-flex flex-column" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)); width: 100vw; position: center">
      <div class="container-homepage position-absolute">
        <%= image_tag "dcl_logo_square.png", class:"w-25 h-25 my-3" %>
        <!--         <h1 class="mt-3 p-3"> dreamco lab</h1> -->
        <p>keeping hope alive.</p>
      </div>
    </div>
    <%= render 'shared/homenav' %>
    <% picture_slides = ['leadkid.png', 'childpainting.jpg', 'homeart5.jpg', 'homeart4.png'].each_with_index do |pic, i| %>
      <div class="carousel-item <%= 'active' if i == 0 %>" style="background: #000, linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)); max-height: 100vh; overflow: hidden; height: 100vh;">
        <img class="d-block w-100" src="<%= image_path pic %>" alt="First slide" style="min-height: 100vh;">
        <div style="position: absolute; width: 100vw; height: 100vh; background: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)); max-height: 100vh; top: 0; left: 0"></div>
      </div>
    <% end %>
  </div>
</div>