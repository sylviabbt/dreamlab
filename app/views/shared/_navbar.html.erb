<div class="navbar navbar-expand-sm navbar-light navbar-dreamcolab">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav" id="navigation">
      <% if current_user.present? %>
        <li class="nav-item active">
          <%= link_to "HOME", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "DRAWINGS", drawings_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "MY COLLABORATIONS", collaborations_path, class: "nav-link" %>
        </li>
        <li> <%= link_to root_path, class: "navbar-brand ml-3 mx-auto" do %>
          <%= image_tag "dcl_logo_icon.png" %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to "CREATORS", creators_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "EVENTS", posts_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "DREAM GALLERY", dream_gallery_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
        <% if current_user.avatar? == false && current_user.first_name? == false %>
          <div class="avatar-empty dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">?</div>
        <% elsif current_user.avatar? == false && current_user.first_name? %>
          <div class="avatar-empty dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= current_user.first_name.first %><%= current_user.last_name.first %>
          </div>
        <% else %>
          <%= cl_image_tag current_user.avatar, class: "avatar-empty dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if current_user.type == "Kid" %>
              <%= link_to "My Profile", kid_path(current_user), class: "dropdown-item" %>
            <% else %>
              <%= link_to "My Profile", creator_path(current_user), class: "dropdown-item" %>
            <% end %>
            <%#= link_to "My Messages", "#", class: "dropdown-item" %>
            <%= link_to "My Account", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link p-3" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
