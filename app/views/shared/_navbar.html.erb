<div class="navbar navbar-expand-sm navbar-light navbar-dreamcolab">
  <%= link_to root_path, class: "navbar-brand" do %>
    <p id="logo-name"><%= image_tag "logo.png" %>dreamCo lab</p>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if current_user.present? %>
        <li class="nav-item active">
          <%= link_to "Drawings |", drawings_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Collaborations |", collaborations_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Dream Gallery", dream_gallery_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= cl_image_tag current_user.avatar, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if current_user.type == "Kid" %>
              <%= link_to "My profile", kid_path(current_user), class: "dropdown-item" %>
            <% else %>
              <%= link_to "My profile", creator_path(current_user), class: "dropdown-item" %>
            <% end %>
            <%= link_to "My Messages", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link p-3" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>